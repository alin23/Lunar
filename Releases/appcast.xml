            <enclosure length="13478605" sparkle:dsaSignature="MEQCIH/Tupi3GnpTULV4nx3QwhexzUyqHAxBIFMX360kKehuAiBVhqKqnfBeORUYUynT9aonw/Kq8Mi0D5xJ4Nw9KwF3zw==" sparkle:edSignature="RmELOeSgCuuBqapiI2Mc2MwqVXNjW8FrZA/hZyIZWm8cSOhtl6PmxXanwK8ah7TgjTPBO8mhTADoMDaNdNYzCQ==" sparkle:shortVersionString="3.1.0" sparkle:version="3.1.0" type="application/octet-stream" url="https://lunar.fyi/download/3.1.0"/>
